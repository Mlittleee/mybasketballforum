<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mybasketballforum.mapper.CommentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.project.mybasketballforum.pojo.Comment">
        <id column="comment_id" property="commentId" />
        <result column="content" property="content" />
        <result column="like_count" property="likeCount" />
        <result column="post_id" property="postId" />
        <result column="upper_id" property="upperId" />
        <result column="user_id" property="userId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        comment_id, content, like_count, post_id, upper_id, user_id
    </sql>

</mapper>
